@model IEnumerable<AccountsPayable.Models.Department>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h1>Employee Reimbursement Form</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="employee-id">
                Employee ID
            </label>
            <input type="text" id="employee-id" name="employee_id" class="form-control">
        </div>

        <div class="form-group">
            <label for="first-name">
                First Name
            </label>
            <input type="text" id="first-name" name="first_name" class="form-control" />

        </div>

        <div class="form-group">
            <label for="last-name">
                Last Name
            </label>
            <input type="text" id="last-name" name="last_name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="date">
                Today's Date (Y-m-d)
            </label>
            <input type="text" name="date" id="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"
                   class="form-control" data-mask="0000-00-00" placeholder="____-__-__">
        </div>

        <div class="form-group">
            <label for="department">
                Department
            </label>

            <select name="department" id="department" class="form-control">
                <option value="" disabled>-- Please Select One --</option>
                @foreach (var item in Model)
                {
                    <option value="@item.department_id">
                        @Html.DisplayFor(modelItem => item.department_name)
                    </option>

                }
            </select>
        </div>

        <div class="form-group">
            <label for="campus">Home Campus</label>

            <input type="text" class="form-control" name="home_campus">
        </div>

        <p class="text-danger">
            *EXPENSES WITH ALL DOCUMENTATION & APPROVALS MUST BE RECEIVED BY THE ACCOUNTS PAYABLE OFFICE WITHIN 30 DAYS OF INCURRING EXPENSE.
        </p>

        <p class="text-danger">
            *IF RECEIVED AFTER 60 DAYS OF INCURRING EXPENSE, IF APPROVED FOR PAYMENT, REIMBURSEMENT WILL BE TAXED.
        </p>

        <p class="text-danger">
            *FOR PROPER AND TIMELY PROCESSING, DO NOT CHANGE FORMAT OF ANY PART OF THIS FORM.  ~THANK YOU~
        </p>

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th colspan="2">Mileage Reimbursement:</th>
                    <th colspan="6">&nbsp;</th>
                    <th class="bg-success">AP USE ONLY</th>
                    <th>&nbsp;</th>
                </tr>
                <tr>
                    <th>Date (Y-m-d)</th>
                    <th>Destination (from-to-return)</th>
                    <th>Miles</th>
                    <th>Purpose of Travel</th>
                    <th>Fund</th>
                    <th>Org</th>
                    <th>Account</th>
                    <th>Amount</th>
                    <th>Taxable?</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][date]"
                               placeholder="___-__-__" data-mask="0000-00-00"
                        >
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][destination]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][miles]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][purpose]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][fund]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][organization]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][account]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[0][amount]">
                    </td>
                    <td>
                        <label>
                            <input type="radio" name="mileage_reimbursements[0][taxable]" value="1">

                            Yes
                        </label>

                        <label>
                            <input type="radio" name="mileage_reimbursements[0][taxable]" value="0">

                            No
                        </label>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm">+</button>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][date]"
                               placeholder="___-__-__" data-mask="0000-00-00"
                        >
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][destination]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][miles]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][purpose]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][fund]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][organization]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][account]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements[1][amount]">
                    </td>
                    <td>
                        <label>
                            <input type="radio" name="mileage_reimbursements[1][taxable]" value="1">

                            Yes
                        </label>

                        <label>
                            <input type="radio" name="mileage_reimbursements[1][taxable]" value="0">

                            No
                        </label>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm">+</button>
                    </td>
                </tr>


                <tr>
                    <td colspan="7" class="text-right">
                        Total Mileage
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="mileage_reimbursements_total">
                    </td>
                    <td colspan="2">
                        &nbsp;
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th colspan="2">Other Expenses:</th>
                    <th colspan="4">&nbsp;</th>
                    <th class="bg-success">AP USE ONLY</th>
                    <th>&nbsp;</th>
                </tr>
                <tr>
                    <th>Date (Y-m-d)</th>
                    <th>Description</th>
                    <th>Fund</th>
                    <th>ORG</th>
                    <th>Account</th>
                    <th>Amount</th>
                    <th>Tax</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][date]"
                               data-mask="0000-00-00" placeholder="___-__-__">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][description]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][Fund]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][ORG]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][Account]">
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses[0][Amount]">
                    </td>
                    <td>
                        <label>
                            <input type="radio" name="other_expenses[0][tax]" value="1">

                            Yes
                        </label>

                        <label>
                            <input type="radio" name="other_expenses[0][tax]" value="0">

                            No
                        </label>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm">+</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="5" class="text-right">
                        Total Expenses
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" name="other_expenses_total">
                    </td>
                    <td colspan="2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td colspan="5">Total Reimbursement</td>
                    <td>
                        <input type="text" class="form-control" name="total_reimbursement_amount">
                    </td>
                    <td colspan="2"></td>
                </tr>
            </tbody>
        </table>

        <div class="form-group">
            <button class="btn btn-primary">submit</button>
        </div>
    </form>
</div>